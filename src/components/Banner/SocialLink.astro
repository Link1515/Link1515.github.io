---
import { Image } from 'astro:assets';

interface Props {
  url: string;
  title: string;
  imageMeta: ImageMetadata;
  isTargetBlank?: boolean;
}

const { url, title, imageMeta, isTargetBlank = true } = Astro.props;
---

<a
  href={url}
  class="rounded-full shadow-[0_0_3px_3px_rgba(255,255,255,0.5)] transition-all duration-500 hover:bg-secondary hover:shadow-[0_0_5px_5px_rgba(255,74,87,0.5)]"
  title={title}
  target={isTargetBlank ? '_blank' : undefined}
>
  <Image src={imageMeta} width={28} alt={title} />
</a>
