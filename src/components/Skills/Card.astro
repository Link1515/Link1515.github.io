---
import { Image } from 'astro:assets';
import iconArrowRight from '~/assets/images/icons/arrow-right.svg';

interface Props {
  title: string;
  imageMeta: ImageMetadata;
  list: string[];
}

const { title, imageMeta, list } = Astro.props;
---

<div
  class="flex w-full flex-col gap-4 bg-primary-light p-8 shadow-xl sm:flex-row sm:justify-center sm:gap-12 md:flex-col md:justify-start md:gap-6 lg:px-12"
  data-aos="fade-up"
>
  <div>
    <Image class="mx-auto mb-2 w-20" src={imageMeta} alt={title} />
    <h3 class="text-center font-semibold text-secondary">{title}</h3>
  </div>
  <ul class="mx-auto w-fit sm:mx-0">
    {
      list.map((item) => (
        <li class="flex items-start gap-2">
          <Image class="mt-1 h-4 w-4" src={iconArrowRight} alt="arrow" />
          {item}
        </li>
      ))
    }
  </ul>
</div>
