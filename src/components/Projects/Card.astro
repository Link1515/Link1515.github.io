---
import { Image } from 'astro:assets';

interface Props {
  imageMeta: ImageMetadata;
  title: string;
  tags: string[];
}

const { imageMeta, title, tags } = Astro.props;
---

<div class="bg-primary-light p-6 shadow-lg">
  <div class="mb-4 lg:h-32">
    <Image class="h-full" src={imageMeta} alt={title} />
  </div>
  <h3 class="mb-2 font-semibold text-secondary">{title}</h3>
  <ul class="flex flex-wrap gap-x-2 text-lg">
    {tags.map((tag) => <li>#{tag}</li>)}
  </ul>
</div>
